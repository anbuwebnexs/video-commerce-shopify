# Prevent directory listing but allow directory access
Options -Indexes +FollowSymLinks

# Enable mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /videocom/video-commerce-shopify/

    # Allow access to actual files and directories
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Route all other requests to index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Ensure PHP processes files
AddType application/x-httpd-php .php

# Set appropriate headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Deny access to sensitive files
<FilesMatch "(config|database|includes)\.php|\.(env|sql)$">
    Deny from all
    Require all denied
</FilesMatch>
